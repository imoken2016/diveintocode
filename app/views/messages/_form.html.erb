<%= form_for [conversation, message], html: {class: "ui reply form"} do |f| %>
    <div class="field">
      <%= f.text_field :body, class: "form-control" %>
    </div>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div class="field">
      <%= f.submit "メッセージを送る" %>
    </div>
<% end %>