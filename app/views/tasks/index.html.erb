<h1>タスク一覧</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>ユーザー名</th>
      <th>期限</th>
      <th>割当</th>
      <th>完了</th>
      <th>状態</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.user.name %></td>
        <td><%= task.deadline %></td>
        <td><%= task.charge.name %></td>
        <td><%= if task.done? then "完了" else "未完了" end %></td>
        <td><%= if task.status == 1 then "対応中" elsif task.status == 0 then "未着手" end %></td>
        <td><%= link_to 'Show', user_task_path(task.user,task) %></td>
        <td><%= link_to 'Edit', edit_user_task_path(task.user,task) %></td>
        <td><%= link_to 'Destroy', user_task_path(task.user, task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しいタスク', new_user_task_path(@user) %>
