<%= form_for @contact, :url => contacts_thanks_path do |f| %>
  <div class="page-header">
    <h1>お問い合わせ（確認画面）</h1>
  </div>
 
  <table class="table">
    <tr>
      <th>名前<span class="text-danger">（必須）</span></th>
      <td><%= f.hidden_field  :name %><%= @contact.name %></td>
    </tr>
    <tr>
      <th>メールアドレス<span class="text-danger">（必須）</span></th>
      <td><%= f.hidden_field  :email %><%= @contact.email %></td>
    </tr>
    <tr>
      <th>タイトル</th>
      <td><%= f.hidden_field  :title %><%= @contact.title %></td>
    </tr>
    <tr>
      <th>お問い合わせ内容</th>
      <td><%= f.hidden_field  :message %><%= @contact.message %></td>
    </tr>
  </table>
  <%= f.submit '送信', class: 'btn' %>
<% end %>

