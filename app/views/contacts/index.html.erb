<div class="container">
  <div class="card card-container">
    <%= form_for @contact, :url => contacts_confirm_path do |f| %>
      <div class="page-header">
        <h1>お問い合わせ</h1>
      </div>

      <% if @contact.errors.any? %>
        <div id="error_explanation">
          <h2><%= @contact.errors.count %>件のエラーがあります。</h2>

          <ul>
          <% @contact.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <table class="table">
        <tr>
          <th>名前<span class="text-danger">（必須）</span></th>
          <td><%= f.text_field :name, :class => "form-control" %></td>
        </tr>
        <tr>
          <th>メールアドレス<span class="text-danger">（必須）</span></th>
          <td><%= f.text_field :email, :class => "form-control" %></td>
        </tr>
        <tr>
          <th>タイトル</th>
          <td><%= f.text_field :title, :class => "form-control" %></td>
        </tr>
        <tr>
          <th>お問い合わせ内容</th>
          <td><%= f.text_area :message, :class => "form-control" %></td>
        </tr>
      </table>
      <%= f.submit '確認', class: 'btn' %>
    <% end %>
  </div>
</div>