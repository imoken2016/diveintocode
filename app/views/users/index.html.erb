<% provide(:title,'All users') %>
<h1>ユーザー一覧</h1>
<ul class="users">
  <%= render @users %>
</ul>




    <% @users.each do |user| %>
<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <div class="caption">
        <h3><%= user.name %></h3>
        <p><%= user.profile %></p>
        <p><%= image_tag(user.image_path, :size => "50x50", :alt => "アイコン", :class=>["img-rounded"]) %></p>
        <p><a href="#" class="btn btn-primary" role="button">サンプルボタンA</a> <a href="#" class="btn btn-default" role="button">サンプルボタンB</a></p>
      </div>
    </div>
  </div>
</div>
<% end %>